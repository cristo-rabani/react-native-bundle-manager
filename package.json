{
  "name": "react-native-bundle-manager",
  "version": "0.63.0",
  "description": "Allows to set packager host or load remote bundle via https URL.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "nativePackage": true,
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "react-native-bundle-manager.podspec"
  ],
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "load",
    "bundle"
  ],
  "repository": "https://github.com/cristo-rabani/react-native-bundle-manager",
  "author": "Cristo Rabani <dev@cristo.io> (https://github.com/cristo-rabani/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cristo-rabani/react-native-bundle-manager/issues"
  },
  "homepage": "https://github.com/cristo-rabani/react-native-bundle-manager#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "react-native-builder-bob": "0.17.1",
    "@react-native-community/eslint-config": "3.2.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/react": "^16.13.1",
    "@types/react-native": "0.63.3",
    "commitlint": "^8.3.5",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^4.2.5",
    "pod-install": "0.1.38",
    "prettier": "2.8.4",
    "react": "16.11.0",
    "react-native": "0.63.3",
    "release-it": "^13.5.8",
    "typescript": "4.9.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "all",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "example/public/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
